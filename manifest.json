{
  "name": "SystemM",
  "version": "0.0.0.1",
  "description": "Simple markdown viewer to make it is easier and faster to read paragrpahs and chapters",
  "manifest_version": 3,
  "icons": {
    "16": "./images/c16.png",
    "32": "./images/c32.png",
    "128": "./images/c128.png"
  },
  "action": {
    "default_popup": "./index.html",
    "default_icons": {
      "16": "./images/c16.png",
      "32": "./images/c32.png",
      "128": "./images/c128.png"
    },
    "options_page": "./options.html",
    "permissions": [
      "downloads",
      "storage",
      "cookies",
      "activeTab",
      "scripting",
      "tabs"
  ],
    "host_permissions": [ "https://*/*" ],
    "background": {
      "service_worker": "./background.js"
    }
  }
}